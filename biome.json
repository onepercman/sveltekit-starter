{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**/*.svelte",
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json"
		]
	},
	"formatter": {},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"rules": {
			"recommended": true,
			"a11y": {
				"noLabelWithoutControl": "off",
				"noSvgWithoutTitle": "off",
				"useValidAnchor": "off",
				"useButtonType": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"noUselessEmptyExport": "off",
				"useLiteralKeys": "off"
			},
			"correctness": {
				"noUnusedImports": "off",
				"noUnusedVariables": "off",
				"useExhaustiveDependencies": "warn"
			},
			"style": {
				"noNegationElse": "off",
				"noParameterAssign": "off",
				"useTemplate": "warn",
				"noNonNullAssertion": "off",
				"useImportType": "error",
				"useShorthandAssign": "error",
				"useAsConstAssertion": "error",
				"useConst": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off",
				"noConsole": "off",
				"noMisleadingCharacterClass": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"options": {
						"attributes": ["classList"],
						"functions": ["cn", "tv", "clsx"]
					}
				}
			}
		}
	}
}
